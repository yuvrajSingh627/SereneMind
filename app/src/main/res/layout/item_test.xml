<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/ripple_item_test"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_test_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_brain"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:background="@drawable/circular_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_short_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PHQ-9"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toEndOf="@id/iv_test_icon"
        app:layout_constraintTop_toTopOf="@id/iv_test_icon"
        tools:ignore="HardcodedText" />
    <TextView
        android:id="@+id/tv_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient Health Questionnaire-9"
        android:textColor="#979797"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginVertical="5dp"
        app:layout_constraintStart_toStartOf="@id/tv_short_name"
        app:layout_constraintTop_toBottomOf="@id/tv_short_name"
        tools:ignore="HardcodedText" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/black"
        android:layout_marginVertical="5dp"
        app:layout_constraintTop_toBottomOf="@id/iv_test_icon"/>


</androidx.constraintlayout.widget.ConstraintLayout>